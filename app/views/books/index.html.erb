<!--一覧.投稿できる.hub---->
<div class="body_index">
  <div class="primary">
    <h2>Books</h2>
  </div>
  </div>
   <div class="succes_box">
    <p class="succes_message">
      <%= flash[:notice] %>
    </p>
  </div>
  <table class ="index_box">
    <tr>
      <th>タイトル</th>
      <th>感想</th>
    </tr>
    <% @books.each do |book| %>
      <tr class ="list">
        <td class="list_title"><%= book.title %></td>
        <td class="list_body"><%= book.body %></td>
        <td class="button">
          <%= link_to "詳細", book_path(book.id) %>
        </td>
        <td class="button">
          <%= link_to "編集", edit_book_path(book.id) %>
        </td>
        <td class="button">
          <%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>

      </tr>
    <% end %>
  </table>
  <div class ="primary">
    <h2>New book</h2>
  </div>
  <% if @book.errors.any? %>
    <div class="error_box">
      <div class="error_text_box">
        <p class ="error_text">error!投稿できませんでした</p>
      </div>
      <ul class="error">
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class ="input_box">
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>感想</h4>
    <%= f.text_area :body %>
    <%= f.submit '投稿する' %>
  <% end %>
  </div>
</div>